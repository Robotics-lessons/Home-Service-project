<?xml version="1.0" encoding="UTF-8"?>


<launch>
  <include file="$(find homeservice)/launch/robot_description.launch"/>
  <arg name="world" default="empty"/> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find homeservice)/world/homeservice.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>


  <arg name="base" value="kobuki"/>   
  <arg name="battery" value="/proc/acpi/battery/BAT0"/>  
  <arg name="stacks" value="hexagons"/>  
  <arg name="3d_sensor" value="kinect"/>  

  <include file="$(find turtlebot_gazebo)/launch/includes/$(arg base).launch.xml">
    <arg name="base" value="$(arg base)"/>
    <arg name="stacks" value="$(arg stacks)"/>
    <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
  </include>

  <!--launch rviz-->
  <!--node name="rviz" pkg="rviz" type="rviz" respawn="false"/-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find homeservice)/rvizconfig/homeservice.rviz"/>
  
</launch>